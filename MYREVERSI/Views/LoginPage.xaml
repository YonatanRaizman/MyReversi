<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyReversi.NewFolder.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:MyReversi.Models"
    xmlns:vm="clr-namespace:MyReversi.ViewModels"
    Title="Login Page"
    x:DataType="vm:LoginPageVM"
    BackgroundImageSource="reversi_bg.png">

    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">
        <Label
            FontAttributes="Bold"
            FontSize="60"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.Login}"
            TextColor="Black" />
        <Label
            FontAttributes="Bold"
            FontFamily="MaterialSymbols"
            FontSize="45"
            HorizontalOptions="Center"
            Text="{StaticResource IconSecurity}"
            TextColor="Black" />
        <Border
            Padding="10"
            Stroke="Green"
            StrokeShape="RoundRectangle 15"
            StrokeThickness="1">
            <Entry
                Margin="5"
                FontSize="18"
                Placeholder="{x:Static m:Strings.Name}"
                Text="{Binding UserName}" />
        </Border>
        <Border
            Padding="10"
            Stroke="Green"
            StrokeShape="RoundRectangle 15"
            StrokeThickness="1">
            <Grid>

                <Entry
                    FontSize="18"
                    Placeholder="{x:Static m:Strings.Password}"
                    IsPassword="{Binding IsPassword}"
                    Text="{Binding Password}" />
                <Button
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    Command="{Binding ToggleIsPasswordCommand}"
                    FontFamily="MaterialSymbols"
                    FontSize="24"
                    HorizontalOptions="End"
                    Style="{StaticResource IconButtonStyle}"
                    Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
                    TextColor="Black" />

            </Grid>
        </Border>

        <Border
            Padding="10"
            Stroke="Green"
            StrokeShape="RoundRectangle 15"
            StrokeThickness="1">
            <Entry
                Margin="5"
                FontSize="18"
                Placeholder="{x:Static m:Strings.Email}"
                Text="{Binding Email}" />
        </Border>

        <Button
            BackgroundColor="Black"
            Command="{Binding LoginCommand}"
            CornerRadius="20"
            FontSize="30"
            HeightRequest="60"
            Text="{x:Static m:Strings.Login}"
            TextColor="White">
            <Button.ImageSource>
                <FontImageSource Glyph="{StaticResource IconLock_open_right}">
                    <FontImageSource.FontFamily>MaterialSymbols</FontImageSource.FontFamily>
                </FontImageSource>
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
</ContentPage>