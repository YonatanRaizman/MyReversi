<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyReversi.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MyReversi.ViewModels"
    Title="GamePage"
    x:DataType="vm:GamePageVM">

    <VerticalStackLayout>
        <Label HorizontalOptions="Center" Text="{Binding OpponentName}" TextColor="Black"/>
        <Label HorizontalOptions="Center" Text="{Binding StatusMessage}" Margin="50" TextColor="Black"/>
        <Grid x:Name="grdBoard" HorizontalOptions="Center" RowSpacing="1" ColumnSpacing="1" VerticalOptions="Center"/>
        <Label HorizontalOptions="Center" Text="{Binding MyName}" TextColor="Black" />
    </VerticalStackLayout>
</ContentPage>
