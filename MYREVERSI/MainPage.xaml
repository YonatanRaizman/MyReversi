<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyReversi.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:MyReversi.Models"
    xmlns:vm="clr-namespace:MyReversi.ViewModels"
    x:DataType="vm:MainPageVM"
    BackgroundImageSource="mainpagebackground.png"
    IsBusy="{Binding IsBusy}">

    <Shell.TitleView>
        <HorizontalStackLayout FlowDirection="LeftToRight">
            <Label
                FontAttributes="Bold"
                FontSize="Medium"
                Text="{x:Static m:Strings.AppTitle}"
                VerticalTextAlignment="Center"
                TextColor="Black"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <VerticalStackLayout Spacing="5" Padding="10">

        <VerticalStackLayout Spacing="5">

            <Button
                BackgroundColor="Green"
                BorderColor="Green"
                BorderWidth="2"
                CornerRadius="6"
                Command="{Binding AddGameCommand}"
                FontSize="20"
                HorizontalOptions="FillAndExpand"
                Text="{x:Static m:Strings.AddGame}"
                TextColor="White" />

            <Button
                BackgroundColor="Green"
                BorderColor="Green"
                BorderWidth="2"
                CornerRadius="6"
                Command="{Binding InstructionsCommand}"
                FontSize="20"
                HorizontalOptions="FillAndExpand"
                Text="📖 Instructions"
                TextColor="White" />

        </VerticalStackLayout>

        <ListView ItemsSource="{Binding GamesList}" SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="m:GameModel">
                    <ViewCell>
                        <Grid ColumnDefinitions="*,2*,0.5*">
                            <Label
                                Grid.Column="0"
                                Margin="20,0,0,0"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalTextAlignment="Start"
                                Text="{Binding HostName}" />
                            <Label
                                Grid.Column="1"
                                FontSize="20"
                                Text="{Binding Created}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>
